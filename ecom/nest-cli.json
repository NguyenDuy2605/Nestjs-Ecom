{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "watchAssets": true,
    "deleteOutDir": true,
    "exclude": ["logs/**"],
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true, "outDir": "dist/src" }
  ]
  }
}
